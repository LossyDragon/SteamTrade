<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:spinnerStyle">@style/CustomSpinner</item>
    </style>

    <style name="CustomSpinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:minHeight">48sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialStyleImageButton" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>
